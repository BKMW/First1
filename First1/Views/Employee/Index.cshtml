@model IEnumerable<First1.Models.Employee>
@{
    ViewBag.Title = "Index";
}
@if (Session["Id"] == null)
{

   
    @*<h4>@Session["Username"].ToString();</h4>*@
}

@*@Html.Partial("_SideBar")*@
<div class="row">
    <div class="col-11">

    </div>
    <div class="col-1" style="margin: 15px auto;">
        <a href="../Employee/AddEmployee">
            <i class="fas fa-plus-circle fa-3x"></i>
        </a>
        
    </div>
</div>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CIN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CIN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department.DepartmentName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <i class="fas fa-edit" style="color:chocolate"></i> |
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { Styles = "btn btn-primary details-btn" }) <i class="fas fa-list" style="color:aqua"></i> |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "" }) <i class="fas fa-trash-alt" style="color:crimson"></i>

        </td>
    </tr>
    }
</table>
<!-- button -->
<button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#myModal">
    Open modal
</button>

<!-- start model delete-->
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Modal body..
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- end model delete-->
